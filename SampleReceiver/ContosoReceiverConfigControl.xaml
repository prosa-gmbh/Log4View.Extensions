<UserControl x:Class="Prosa.Log4View.SampleReceiver.ContosoReceiverConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prosa.Log4View.SampleReceiver"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance {x:Type local:ContosoReceiverConfigVm}}">
    <StackPanel>
         <HeaderedContentControl Header="Message Text">
             <TextBox Text="{Binding Filename, UpdateSourceTrigger=PropertyChanged}" Margin="0 4 0 0"/>
         </HeaderedContentControl>

        <HeaderedContentControl Header="Unique Logfile ID" Margin="0 16 0 0">
            <TextBox Text="{Binding CustomLogFileId, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="UIElement_OnPreviewTextInput" Margin="0 4 0 0"/>
        </HeaderedContentControl>
    </StackPanel>
</UserControl>
